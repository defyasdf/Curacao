<config>
    <modules>
        <Magify_Base>
            <version>0.1.0</version>
        </Magify_Base>
    </modules>
    <global>
        <helpers>
            <magify_base>
                <class>Magify_Base_Helper</class>
            </magify_base>
        </helpers>
        <blocks>
            <magify_base>
            	<class>Magify_Base_Block</class>
			</magify_base>
        </blocks>
    </global>
    <frontend>
        <translate>
            <modules>
                <magify_base>
                    <files>
                        <default>Magify_Base.csv</default>
                    </files>
                </magify_base>
            </modules>
        </translate>
    </frontend>
    <adminhtml>
        <layout>
            <updates>
                <magify_base>
                    <file>magify/base.xml</file>
                </magify_base>
            </updates>
        </layout>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <magify_base>
                                            <title>Magify Commerce</title>
                                        </magify_base>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>	
</config>
