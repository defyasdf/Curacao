<config>
    <tabs>
        <magify translate="label" module="magify_core">
            <label>Magify Commerce</label>
            <sort_order>190</sort_order>
            <class>magify</class>
        </magify>
    </tabs>
    <sections>
        <magify_core translate="label" module="magify_core">
            <label>Magify Core Config</label>
            <tab>magify</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <class>magify magify_core</class>
            <header_css>magify magify_core</header_css>
            <groups>
                <scripts>
                    <label>Libraries &amp; Scripts</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <jquery_enabled translate="label">
                            <label>Enable jQuery</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </jquery_enabled>
                        <jquery_file translate="label">
                            <label>jQuery File</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </jquery_file>
                        <jquerytools_enabled translate="label">
                            <label>Enable jQuery Tools</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </jquerytools_enabled>
                        <jquerytools_file translate="label">
                            <label>jQuery Tools File</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </jquerytools_file>
                    </fields>
                </scripts>
            </groups>
        </magify_core>
    </sections>
</config>
