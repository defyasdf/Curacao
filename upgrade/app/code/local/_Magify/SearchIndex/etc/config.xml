<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Magify_SearchIndex>
            <version>1.0.1</version>
        </Magify_SearchIndex>
    </modules>
    <global>
        <models>
            <catalogsearch>
                <rewrite>
                    <indexer_fulltext>Magify_SearchIndex_Model_Indexer_Search</indexer_fulltext>
                    <layer>Magify_SearchIndex_Model_Layer</layer>
                </rewrite>
            </catalogsearch>

            <searchindex>
                <class>Magify_SearchIndex_Model</class>
                <resourceModel>searchindex_resource</resourceModel>
            </searchindex>

            <searchindex_resource>
                <class>Magify_SearchIndex_Model_Resource</class>
            </searchindex_resource>
        </models>
        <helpers>
            <searchindex>
                <class>Magify_SearchIndex_Helper</class>
            </searchindex>
        </helpers>
        <resources>
            <searchindex_setup>
                <setup>
                    <module>Magify_SearchIndex</module>
                </setup>
            </searchindex_setup>
        </resources>
        <blocks>
            <searchindex>
                <class>Magify_SearchIndex_Block</class>
            </searchindex>
        </blocks>
        <events>
            <cms_page_save_commit_after>
                <observers>
                    <index>
                        <class>searchindex/observer</class>
                        <method>processCmsPageSave</method>
                    </index>
                </observers>
            </cms_page_save_commit_after>
            <cms_page_delete_commit_after>
                <observers>
                    <index>
                        <class>searchindex/observer</class>
                        <method>processCmsPageDelete</method>
                    </index>
                </observers>
            </cms_page_delete_commit_after>
        </events>
    </global>
    <frontend>
        <translate>
            <modules>
                <Magify_SearchIndex>
                    <files>
                        <default>Magify_SearchIndex.csv</default>
                    </files>
                </Magify_SearchIndex>
            </modules>
        </translate>
        <layout>
            <updates>
                <searchindex module="searchindex">
                    <file>searchindex.xml</file>
                </searchindex>
            </updates>
        </layout>
        <routers>
            <searchindex>
                <use>standard</use>
                <args>
                    <module>Magify_SearchIndex</module>
                    <frontName>searchindex</frontName>
                </args>
            </searchindex>
        </routers>
    </frontend>
    <adminhtml>
        <acl>
            <all>
                <title>Allow Everything</title>
            </all>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <searchindex translate="title" module="searchindex">
                                            <title>Sphinx Index</title>
                                        </searchindex>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <admin>
        <routers>
            <searchindex>
                <use>admin</use>
                <args>
                    <module>Magify_SearchIndex</module>
                    <frontName>searchindex</frontName>
                </args>
            </searchindex>
        </routers>
    </admin>
    <default>
        <searchindex>
            <catalog>
                <title>Catalog</title>
            </catalog>
            <cms>
                <title>Other Results</title>
            </cms>
            <awblog>
                <title>Aheadworks Blog</title>
            </awblog>
        </searchindex>
    </default>
</config>