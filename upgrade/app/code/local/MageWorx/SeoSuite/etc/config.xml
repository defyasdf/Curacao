<config>
    <modules>
        <MageWorx_SeoSuite>
            <version>3.7.3</version>
        </MageWorx_SeoSuite>
    </modules>
    <frontend>
        <translate>
            <modules>
                <MageWorx_SeoSuite>
                    <files>
                        <default>MageWorx_SeoSuite.csv</default>
                    </files>
                </MageWorx_SeoSuite>
            </modules>
        </translate>
        <layout>
            <updates>
                <seosuite>
                    <file>seosuite.xml</file>
                </seosuite>
            </updates>
        </layout>
    </frontend>
    <global>
        <models>
            <seosuite>
                <class>MageWorx_SeoSuite_Model</class>
                <resourceModel>seosuite_mysql4</resourceModel>
            </seosuite>
            <seosuite_mysql4>
                <class>MageWorx_SeoSuite_Model_Mysql4</class>
                <entities>
                    <report_product><table>seosuite_report_product</table></report_product>
                    <report_category><table>seosuite_report_category</table></report_category>
                    <report_cms><table>seosuite_report_cms</table></report_cms>
                    <template><table>seosuite_template</table></template>
                    <template_store><table>seosuite_template_store</table></template_store>
                </entities>
            </seosuite_mysql4>            
      
           

        </models>
        <resources>
            <seosuite_setup>
                <setup>
                    <module>MageWorx_SeoSuite</module>
                    <class>MageWorx_SeoSuite_Model_Resource_Eav_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </seosuite_setup>
            <seosuite_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </seosuite_write>
            <seosuite_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </seosuite_read>
        </resources>
