										data: {pdata:result.product},
										url:  login_url,                    
										success: function(data) {
										 
										   var result = jQuery.parseJSON(data); 
											if(result.success) {
												//location.reload();
												if(jQuery("#referURL").val() == 'http://www.icuracao.com/checkout/cart/' || jQuery("#referURL").val() == 'https://www.icuracao.com/checkout/cart/'){
													window.location.replace('https://www.icuracao.com/onestepcheckout/');
												}else{
													window.location.replace(jQuery("#referURL").val());
												}
												//alert(result.product);
