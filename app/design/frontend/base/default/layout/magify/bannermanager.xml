<layout>
    <default>
        <reference name="head">
        <!-- 	<action method="addJs"><stylesheet>jquery/1/jquery .min. js</stylesheet></action> -->
        	 <action method="addJs"><stylesheet>jquery/plugins/jquery.nivo.slider.js</stylesheet></action> 
        	<action method="addJs"><stylesheet>jquery/plugins/jquery.animate-colors-min.js</stylesheet></action>
        <action method="addCss"><stylesheet>magify/bannermanager/css/nivo.css</stylesheet></action>
        </reference>
        <reference name="header">
        	<block type="magify_bannermanager/factory" name="magify.bannermanager.factory.header" before="-">
                <action method="setPosition">
                    <position>above_header</position>
                </action>
            </block>
        </reference>
        <reference name="left">
        	<block type="magify_bannermanager/factory" name="magify.bannermanager.factory.left" after="catalog.leftnav">
                <action method="setPosition">
                    <position>left</position>
                </action>
            </block>
        </reference>
        <reference name="content">
        	<block type="magify_bannermanager/factory" name="magify.bannermanager.factory.content" before="-">
                <action method="setPosition">
                    <position>content</position>
                </action>
            </block>
        </reference>
        <reference name="right">
        	<block type="magify_bannermanager/factory" name="magify.bannermanager.factory.right" after="catalog.product.related">
                <action method="setPosition">
                    <position>right</position>
                </action>
            </block>
        </reference>
        <reference name="footer">
        	<block type="magify_bannermanager/factory" name="magify.bannermanager.factory.footer" before="-">
                <action method="setPosition">
                    <position>footer</position>
                </action>
            </block>
        </reference>
        <reference name="category.products">
			<block type="magify_bannermanager/factory" name="magify.bannermanager.factory.category.left" as="magify.bannermanager.factory.category.left" before="-">
                <action method="setPosition">
                    <position>category_left</position>
                </action>
            </block>
			<block type="magify_bannermanager/factory" name="magify.bannermanager.factory.category.top.right" as="magify.bannermanager.factory.category.top.right" before="-">
                <action method="setPosition">
                    <position>category_topright</position>
                </action>
            </block>
			<block type="magify_bannermanager/factory" name="magify.bannermanager.factory.category.bottom.right" as="magify.bannermanager.factory.category.bottom.right" before="-">
                <action method="setPosition">
                    <position>category_bottomright</position>
                </action>
            </block>        
        </reference>
    </default>
</layout>