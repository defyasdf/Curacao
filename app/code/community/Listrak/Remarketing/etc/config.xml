<config>
    <modules>
        <Listrak_Remarketing>
            <version>1.1.2</version>
        </Listrak_Remarketing>
    </modules>
    <frontend>
        <routers>
            <listrak_remarketing>
                <use>standard</use>
                <args>
                    <module>Listrak_Remarketing</module>
                    <frontName>remarketing</frontName>
                </args>
            </listrak_remarketing>
        </routers>
        <layout>
            <updates>
                <remarketing>
                    <file>remarketing.xml</file>
                </remarketing>
            </updates>
        </layout>
        <events>
			<controller_action_layout_render_before>
				<observers>
					<listrak_remarketing_observer>
						<type>singleton</type>
						<class>Listrak_Remarketing_Model_Observer</class>
						<method>checkForClick</method>
					</listrak_remarketing_observer>
				</observers>
			</controller_action_layout_render_before>
			<checkout_cart_add_product_complete>
				<observers>
					<listrak_remarketing_observer>
						<type>singleton</type>
						<class>Listrak_Remarketing_Model_Observer</class>
						<method>sessionInit</method>
					</listrak_remarketing_observer>
				</observers>
			</checkout_cart_add_product_complete>
			<sales_order_place_after>
				<observers>
					<listrak_remarketing_observer>
						<type>singleton</type>
						<class>Listrak_Remarketing_Model_Observer</class>
						<method>orderPlaced</method>
					</listrak_remarketing_observer>
				</observers>
			</sales_order_place_after>
			<newsletter_subscriber_save_after>
				<observers>
					<listrak_remarketing_observer>
						<type>singleton</type>
						<class>Listrak_Remarketing_Model_Observer</class>
						<method>subscriberSaved</method>
					</listrak_remarketing_observer>
				</observers>
			</newsletter_subscriber_save_after>
		</events>
    </frontend>
    <global>
        <models>
            <listrak>
                <class>Listrak_Remarketing_Model</class>
                <resourceModel>listrak_mysql4</resourceModel>
            </listrak>
            <listrak_mysql4>
                <class>Listrak_Remarketing_Model_Mysql4</class>
                <entities>
                    <click>
                        <table>listrak_remarketing_click</table>
                    </click>
                    <log>
                        <table>listrak_remarketing_log</table>
                    </log>
                    <session>
                    	<table>listrak_remarketing_session</table>
                    </session>
                    <session_email>
                    	<table>listrak_remarketing_session_email</table>
                    </session_email>
                    <emailcapture>
                    	<table>listrak_remarketing_emailcapture</table>
                    </emailcapture>
                    <subscriber_update>
                    	<table>listrak_remarketing_subscriber_update</table>
                    </subscriber_update>
                </entities>
            </listrak_mysql4>
            <newsletter>
                <rewrite>
                    <subscriber>Listrak_Remarketing_Model_Subscriber</subscriber>
                </rewrite>
            </newsletter>
        </models>
        <resources>
            <listrak_remarketing_setup>
                <setup>
                    <module>Listrak_Remarketing</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </listrak_remarketing_setup>
            <listrak_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </listrak_write>
            <listrak_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </listrak_read>
        </resources>
		<helpers>
			<remarketing>
				<class>Listrak_Remarketing_Helper</class>
			</remarketing>
		</helpers>
		<blocks>
			<remarketing>
				<class>Listrak_Remarketing_Block</class>
			</remarketing>
		</blocks>
    </global>
    <admin>
    	<routers>
            <remarketing>
                <use>admin</use>
                <args>
                    <module>Listrak_Remarketing</module>
                    <frontName>remarketing</frontName>
                </args>
            </remarketing>
        </routers>
    </admin>
    <adminhtml>
    	<layout>
	        <updates>
	            <remarketing>
	                <file>remarketing.xml</file>
	            </remarketing>
	        </updates>
	    </layout>
		<events>
			<admin_user_load_before>
				<observers>
					<listrak_remarketing_observer>
						<type>singleton</type>
						<class>Listrak_Remarketing_Model_Observer</class>
						<method>adminPageLoad</method>
					</listrak_remarketing_observer>
				</observers>
			</admin_user_load_before>
		</events>
    </adminhtml>
    <default>
        <remarketing>
            <subscription>
                <signup_success_email>0</signup_success_email>
                <unsubscribe_email>0</unsubscribe_email>
            </subscription>
            <abandonedcarts>
            	<abandoned_cart_report_timeout>60</abandoned_cart_report_timeout>
            </abandonedcarts>
            <modal>
            	<enabled>0</enabled>
            	<listrakMerchantID></listrakMerchantID>
            	<scriptLocation>s1.listrakbi.com/scripts/script.js</scriptLocation>
            </modal>
        </remarketing>
    </default>
</config>