        <layout>
            <updates>
                <magify_bannermanager>
                    <file>magify/bannermanager.xml</file>
                </magify_bannermanager>
            </updates>
        </layout>
        <translate>
            <modules>
                <magify_bannermanager>
                    <files>
                        <default>Magify_BannerManager.csv</default>
                    </files>
                </magify_bannermanager>
            </modules>
        </translate>
    	<!--events>
    		<controller_action_postdispatch>
				<observers>
		            <magify_bannermanager>
		            	<type>singleton</type>
		            	<class>Magify_BannerManager_Model_Observer</class>
						<method>saveRequest</method>
					</magify_bannermanager>
				</observers>
    		</controller_action_postdispatch>
    	</events-->
    </frontend>
    <admin>
        <routers>
            <magify_bannermanager>
                <use>admin</use>
                <args>
                    <module>Magify_BannerManager</module>
                    <frontName>magifybannermanager</frontName>
                </args>
            </magify_bannermanager>
			<adminhtml>
				<args>
					<modules>
						<Magify_BannerManager before="Mage_Adminhtml">Magify_BannerManager_Adminhtml</Magify_BannerManager>
					</modules>
				</args>
			</adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <magify_bannermanager>
                                            <title>Banner Manager</title>
                                        </magify_bannermanager>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <magify_bannermanager>
                    <file>magify/bannermanager.xml</file>
                </magify_bannermanager>
            </updates>
        </layout>
    </adminhtml>
	<default>
		<magify_bannermanager>
			<settings>
				<mode>1</mode>
				<frontend>nivo</frontend>
				<minbanners>1</minbanners>
				<maxbanners>10</maxbanners>
				<fluid_background>1</fluid_background>
				<position_template>0</position_template>
			</settings>
			<group_settings>
				<schedule_filter>0</schedule_filter>
			</group_settings>
			<developer>
				<debug>0</debug>
			</developer>
		</magify_bannermanager>
	</default>
</config>