<?xml version="1.0" encoding="UTF-8"?>
<config>
	<modules>
		<Magify_SearchAutocomplete>
			<version>1.1.4</version>
		</Magify_SearchAutocomplete>
	</modules>
	<global>
        <models>
            <searchautocomplete>
                <class>Magify_SearchAutocomplete_Model</class>
                <resourceModel>searchautocomplete_resource</resourceModel>
            </searchautocomplete>
            <searchautocomplete_resource>
                <class>Magify_SearchAutocomplete_Model_Resource</class>
            </searchautocomplete_resource>
        </models>
		<blocks>
			<searchautocomplete>
				<class>Magify_SearchAutocomplete_Block</class>
			</searchautocomplete>
		</blocks>
		<helpers>
			<searchautocomplete>
				<class>Magify_SearchAutocomplete_Helper</class>
			</searchautocomplete>
		</helpers>
	</global>
	<frontend>
		<routers>
			<m_searchautocomplete>
				<use>standard</use>
				<args>
					<module>Magify_SearchAutocomplete</module>
					<frontName>searchautocomplete</frontName>
				</args>
			</m_searchautocomplete>
		</routers>
		<layout>
			<updates>
				<searchautocomplete>
					<file>searchautocomplete.xml</file>
				</searchautocomplete>
			</updates>
		</layout>
		<translate>
            <modules>
                <Magify_SearchAutocomplete>
                    <files>
                        <default>Magify_SearchAutocomplete.csv</default>
                    </files>
                </Magify_SearchAutocomplete>
            </modules>
        </translate>
	</frontend>
	<adminhtml>
        <acl>
            <all>
                <title>Allow Everything</title>
            </all>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <searchautocomplete>
                                            <title>Search Autocomplete</title>
                                        </searchautocomplete>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
	<default>
        <searchautocomplete>
            <general>
                <min_chars>3</min_chars>
                <delay>500</delay>
                <max_results>10</max_results>
                <tip>Search entire store here...</tip>
                <show_price>1</show_price>
                <show_short_description>1</show_short_description>
                <show_image>1</show_image>
                <short_description_len>120</short_description_len>
                <filter_type>category</filter_type>
                <image_size>70x50</image_size>
            </general>
        </searchautocomplete>
    </default>
</config>